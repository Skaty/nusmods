<div class="js-nm-friends-edit-popover">
  <div class="form-group">
    <label for="name">Name of Friend</label>
    <input type="text" class="form-control" id="name" value="{{name}}" placeholder="Enter friend's name">
  </div>
  <div class="form-group">
    <label for="url">Timetable URL</label>
    <input type="url" class="form-control" id="url" value="{{url}}" placeholder="Enter friend's timetable URL" size="26">
  </div>
  <button class="btn btn-warning js-nm-friends-save">Save</button>
</div>
